@model UserDataModel?

@{
    Layout = null;
}

@if (Model == null)
{
    <div class="nav-item dropdown">
        <button class="btn btn-secondary dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
            Login
        </button>
        <ul class="dropdown-menu">
            <li><a class="dropdown-item" asp-controller="Account" asp-action="Login">Login</a></li>
            <li><a class="dropdown-item" asp-controller="Account" asp-action="Registration">Register</a></li>
        </ul>
    </div>
}
else
{
    <li class="nav-item">
        <a class="nav-link text-dark" asp-controller="Account" asp-action="GetUserData">Hello @Model.Email</a>
    </li>
    <li class="nav-item">
        <a class="nav-link text-dark" asp-controller="Account" asp-action="Logout">Logout</a>
    </li>
}
