@using ASP.NET.MVC_Exprtiment.Core.DataTransferObjects;
@model BandDto;

<div class="col-12 col-sm-10 col-md-6 col-lg-4 margin-bottom-15 band-preview">
    <h2>
        @Html.DisplayFor(modelItem => Model.Name)
    </h2>
    <h6>
        @Html.DisplayFor(modelItem => Model.Id)
    </h6>
    <h3>
        @Html.DisplayFor(modelItem => Model.Country)
    </h3>
    <h6>
        @Html.DisplayFor(modelItem => Model.DateOfCreation)
    </h6>
    <h4>
        @Html.DisplayFor(modelItem => Model.Description)
    </h4>
    <a class="btn btn-primary" href="~/band/details/@Model.Id">Read details</a>
</div>
